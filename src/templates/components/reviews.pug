script(type="text/x-template")#reviews-container
    .reviews__wrapper
        .reviews__header
            h2.reviews__title Что обо мне говорят
            .reviews__buttons
                button(
                    @click="slide('prev')"
                ).circle-btn
                    +icon("arrow-down", "left-arrow")
                button(
                    @click="slide('next')"
                ).circle-btn
                    +icon("arrow-down", "right-arrow")
        carousel(
            :perPageCustom="[[0, 1], [340, 1], [500, 2]]"
            :paginationEnabled="false"
            :navigationEnabled="true"
        ).reviews__content
            slide(v-for="review in reviews" :key="review.id").reviews-item
                +icon("quote", "review-item__quote-icon")
                .review-item__card
                    .review-item__text
                        p {{review.text}}
                    .review-item__author
                img(:src="review.authorPic").avatar.review-item__avatar
                .review-item__author-info
                    .review-item__author-name {{review.authorName}}
                    .review-item__author-position {{review.authorOcc}}
