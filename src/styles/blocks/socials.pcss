.socials {
    display: flex;

    &__item {
        margin-right: 30px;

        &:last-child {
            margin-right: 0;
        }
    }

    &__icon {
        height: 100%;
        fill: $text-color;
    }

    &__link {
        fill: $text-color;
        width: 27px;
        height: 25px;
        display: block;
    }

    &__list {
        display: inline-flex;
        justify-content: center;
    }
}