.nav {
    &__list {
        color: $text-color;
        display: inline-flex;
        justify-content: center;
    }

    &__item {
        margin-left: 50px;
        text-decoration: none;

        &:first-child {
            margin-left: 0;
        }
    }

    &__link {
        text-decoration: none;
    }
}