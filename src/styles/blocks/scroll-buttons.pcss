.scroll-down-btn {
    font-family: Open Sans, serif;
    font-style: normal;
    font-weight: 600;
    font-size: 18px;
    line-height: 25px;
    color: $text-color;
    background-color: transparent;
    &__icon {
        width: 16px;
        margin-left: 12px;
        fill: $text-color;
        &:hover {
            cursor: pointer;
        }
    }
}