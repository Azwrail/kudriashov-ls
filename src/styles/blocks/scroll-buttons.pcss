.scroll-down-btn {
    font-style: normal;
    font-weight: 600;
    font-size: 18px;
    line-height: 25px;
    color: $text-color;
    background-color: transparent;
    text-decoration: none;
    display: flex;
    align-items: center;
    &:hover {
        cursor: pointer;
        color: #FF9A00;
        fill: #FF9A00;
        text-decoration: underline;
        svg {
            fill: #FF9A00;
        }
    }
    &__icon {
        width: 16px;
        margin-left: 12px;
        fill: $text-color;
    }
}
