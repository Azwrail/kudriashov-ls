.slider {
    max-width: 1133px;
    position: relative;
    margin-right: 140px;
    min-width: 650px;
    @include desktop {
        margin-right: 30px;
    }
    @include desktop-tabs {
        margin-bottom: 60px;
    }
    @include tablet {
        margin-right: 0;
        min-width: 500px;
    }
    &::after {
        content: attr(data-slide);
        position: absolute;
        right: 0;
        top: 7%;
        transform: translate(140px, 10px);
        font-size: 400px;
        font-weight: 800;
        line-height: 1;
        color: #e6e6e6;
        z-index: -1;
            @include desktop {
                font-size: 300px;
            }
            @include desktop-tabs {
                font-size: 300px;
                top: 45%;
                margin-right: 0;
            }
            @include tablet {
                font-size: 300px;
                top: 25%;
            }
            @include tab-phones {
                display: none;
            }
    }

    @include tab-phones {
        min-width: 100%;
    }
}

.slider__main {
    max-width: 977px;
    overflow: hidden;
    display: flex;
    align-items: flex-end;
    position: relative;
}

.slider__buttons {
    display: flex;
    flex-direction: column;
    padding-bottom: 59px;

    .up-btn,
    .down-btn {
        display: inline-block;
        position: relative;
        width: 50px;
        height: 50px;
        background-color: #353e4e;

        svg {
            fill: $text-color;
            height: 12px;
            position: absolute;
            top: 40%;
            left: 40%;
            &.arrow-up {
                transform: rotate(0deg);
                transform-origin: 50% 50%;
            }
            &.arrow-down {
                opacity: 0.4;
                transform: rotate(180deg);
                transform-origin: 50% 50%;
            }
        }

        &:hover {
            background-color: #282e3b;
        }
        &:active {
            background-color: #1a1e26;
        }

    }
}

.slider__current-item {
    position: relative;
}

.slider__preview-wrapper {
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    position: absolute;
    bottom: 0;
    right: 0;
    max-width: 180px;
    padding-bottom: 59px;
    @include tab-phones {
        display: none;
    }
}

.slider__preview {
    max-height: 100px;
    transition: 0.4s;
    &:hover {
        cursor: pointer;
        transform: translate(0, -40px)
    }
    &.active {
        border: 3px solid #dc9322;
    }
    @include desktop {
        max-width: 900px;
        height: 50%;
    }
}

.slider__window {
    overflow: hidden;
}