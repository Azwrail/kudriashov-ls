.portfolio {
    padding-bottom: 50px;
    color: black;
}

.portfolio__wrapper {
    margin-top: 170px;
}

.portfolio__title {
    font-style: normal;
    font-weight: bold;
    font-size: 36px;
    line-height: 49px;
    margin-bottom: 83px;
    @include desktop-tabs {
        margin-bottom: 48px;
    }
    @include tablet {
        text-align: center;
    }
}

.portfolio__content {
    display: flex;
    width: 100%;
    @include desktop-tabs {
        flex-direction: column;
        align-items: center;
    }
}

.portfolio__desc {
    display: flex;
    flex-direction: column;
    max-width: 348px;
    @include desktop-tabs {
        max-width: 420px;
        align-items: center;
    }
}

.portfolio__desc-title {
    font-style: normal;
    font-weight: bold;
    font-size: 30px;
    line-height: 41px;
    margin-top: 50px;
    @include tab-phones {
        text-align: center;
    }
}

.portfolio__desc-info {
    font-style: normal;
    font-weight: 600;
    font-size: 16px;
    line-height: 30px;
    margin-top: 30px;
    color: rgba(51, 60, 73, 0.8);
    @include desktop-tabs {
        text-align: center;
        font-size: 14px;
        line-height: 24px;
    }
}

.portfolio__desc-link {
    font-style: normal;
    font-weight: bold;
    font-size: 18px;
    line-height: 25px;
    color: #586ED3;
    margin-top: 40px;
    &:hover {
        text-decoration: underline;
    }
    svg {
        width: 15px;
        fill: #586ed3;
        margin-right: 20px;
    }
    @include desktop-tabs {
        text-align: center;
        font-size: 14px;
        line-height: 19px;
    }
}
.tag-list {
    display: flex;
}

.tag {
    font-style: normal;
    font-weight: 600;
    font-size: 15px;
    line-height: 20px;
    border-radius: 23px;
    background-color: #f3f5f9;
    padding: 15px 23px;
    margin-right: 15px;
    color: rgba(51, 60, 73, 0.8);

    &:last-child {
        margin: 0;
    }
}
